{
  "name": "@planadecu/skill-testing-ml",
  "version": "2.1.1",
  "description": "Skill Testing Markup Language",
  "main": "dist/lib/Index.js",
  "bin": {
    "skill-tester": "dist/bin/SkillTester.js"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/bin/**/*.js",
    "dist/lib/**/*.js"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "silent": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "verbose": true
  },
  "prettier": {
    "tabWidth": 4
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/planadecu/skill-testing-ml.git"
  },
  "scripts": {
    "babel": "npm run babel.lib && npm run babel.test && npm run babel.bin",
    "prepublishOnly": "npm run babel.lib && npm run babel.bin",
    "babel.lib": "babel lib -d dist/lib",
    "babel.test": "babel test -D -d dist/test",
    "babel.bin": "babel bin -d dist/bin",
    "lint": "eslint --config .eslintrc.json bin lib test",
    "lint.fix": "eslint --config .eslintrc.json --fix bin lib test",
    "pretest": "npm run lint",
    "test": "jest",
    "test.babel": "npm run babel && jest --config jest-config-babel.json",
    "test.smapi.1": "jest --runInBand test/SMAPI.test.js",
    "test.smapi.2": "jest --runInBand test/SMAPIInvoker.test.js",
    "coverage": "codecov",
    "test.watch": "jest --watchAll"
  },
  "author": "Jordi Planadecursach (original author: John Kelvie)",
  "license": "ISC",
  "dependencies": {
    "bespoken-jest-stare": "^1.1.0-RC.2",
    "bespoken-jsonpath": "^1.0.1",
    "chalk": "^4.1.2",
    "cosmiconfig": "^5.2.0",
    "dotenv": "^8.2.0",
    "https-proxy-agent": "^5.0.0",
    "jest": "^30.2.0",
    "jest-message-util": "^30.2.0",
    "js-yaml-bespoken": "^3.11.6",
    "lodash": "^4.17.21",
    "uuid": "^11.0.0",
    "virtual-alexa": "^0.7.8",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/plugin-transform-async-to-generator": "^7.28.6",
    "@babel/plugin-transform-block-scoping": "^7.28.6",
    "@babel/plugin-transform-classes": "^7.28.6",
    "alexa-sdk": "^1.0.25",
    "ask-sdk-core": "^2.14.0",
    "ask-sdk-model": "^1.86.0",
    "body-parser": "^1.18.3",
    "codecov": "^3.8.3",
    "debug": "^4.4.3",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-spellcheck": "^0.0.11",
    "eslint-plugin-standard": "^4.0.0",
    "jest-junit": "^6.4.0",
    "nock": "^10.0.6",
    "sprintf-js": "^1.1.1"
  }
}
